@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <partial name="_Notifications" />
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items view</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Item Price
            </th>
            <th>
                Category
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="40%">
                    @item.Name
                </td>
                <td width="20%">
                    @item.Price
                </td>
                <td width="30%">
                    @item.Category.Name
                </td>
                <td>
                    <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3"></i> 
                    </a>
                </td>
            </tr>   
        }
        </tbody>
    </table>
</div>

