
@model Item
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" /> @*<<< "disable" >>> this keyword for prevent the user from modifying the values and they are for viewing only*@
        </div>

        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" disabled class="form-control" asp-items="@ViewBag.CategryList"></select>
        </div>

        <br />
        <hr />

        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <!-- this line for return into index page-->
        <a asp-controller="Items" asp-action="Index"  class="btn btn-secondary" style="width:150px">
            back to Items
        </a>
    </div>
</form>





