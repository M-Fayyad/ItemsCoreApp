@model Item
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Item</h2>
            <hr />
        </div>

        <!-- this line for return all invalid input-->
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategryList"></select>
        </div>

        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <!-- this line for return into index page-->
		<a asp-controller="Items" asp-action="Index"  class="btn btn-secondary" style="width:150px">
            back to Items
        </a>
    </div>
</form>

<!-- this section for Client_Side_Validation -->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


